{
    "manifest_version": 2,
    "name": "Localization Context",
    "version": "1.0",
    "icons": {
        "16": "static/icon16.png",
        "32": "static/icon32.png",
        "48": "static/icon48.png",
        "128": "static/icon128.png"
    },
    "background": {
        "scripts": [
            "background-screen.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "options_page": "options/options.html",
    "permissions": [
        "activeTab",
        "storage",
        "unlimitedStorage",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "static/icon48.png",
        "default_popup": "popup/popup.html"
    }
}